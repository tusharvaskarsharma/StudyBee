{
  "manifest_version": 3,
  "name": "StudyBee",
  "version": "1.0.0",
  "description": "Track your study time with AI-powered coaching",
  "permissions": [
    "tabs",
    "storage",
    "alarms",
    "idle",
    "notifications"
  ],
  "host_permissions": [
    "https://studybee-3ru4.onrender.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }

}
